# 1. 目标硬件配置（核心，必须匹配AX1800Pro）
CONFIG_TARGET_ipq60xx=y
CONFIG_TARGET_ipq60xx_generic=y
CONFIG_TARGET_ipq60xx_generic_DEVICE_jdcloud_ax1800pro=y

# 2. 固件分区与格式（适配128MB闪存）
CONFIG_TARGET_KERNEL_PARTSIZE=16
CONFIG_TARGET_ROOTFS_PARTSIZE=100
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_ROOTFS_JFFS2=n  # AX1800Pro用SQUASHFS更稳定
CONFIG_GRUB_IMAGES=n          # ARM架构无需GRUB

# 3. 核心系统功能（匹配“状态/系统”菜单）
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y  # 系统管理全功能（含概览/日志/进程/负载等）
CONFIG_PACKAGE_luci-app-filetransfer=y  # 文件传输
CONFIG_PACKAGE_luci-app-autoreboot=y    # 定时重启
CONFIG_PACKAGE_luci-app-diskman=y       # 磁盘管理
CONFIG_PACKAGE_luci-app-mount=y         # 挂载点
CONFIG_PACKAGE_luci-app-lede=y          # LED配置
CONFIG_PACKAGE_luci-app-backup=y        # 备份升级
CONFIG_PACKAGE_luci-theme-argon=y       # Argon主题
CONFIG_PACKAGE_luci-theme-design=y      # Design主题
CONFIG_PACKAGE_ttyd=y                   # TTY终端
CONFIG_PACKAGE_htop=y                   # 实时负载
CONFIG_PACKAGE_procps-ng=y              # 系统进程
CONFIG_PACKAGE_iproute2=y               # 路由表/网络诊断

# 4. 广告过滤/DNS优化（匹配“服务-广告过滤”）
CONFIG_PACKAGE_luci-app-adguardhome=y   # AdGuard Home
CONFIG_PACKAGE_luci-app-ikoolproxy=y    # ikoolproxy滤广告
CONFIG_PACKAGE_luci-app-adbyby-plus=y   # 广告屏蔽大师Plus+
CONFIG_PACKAGE_luci-app-mosdns=y        # MosDNS
CONFIG_PACKAGE_luci-app-smartdns=y      # SmartDNS
CONFIG_PACKAGE_luci-app-ddns=y          # 动态DNS
CONFIG_PACKAGE_ddns-scripts_aliyun=y    # DDNS阿里云适配
CONFIG_PACKAGE_ddns-scripts_dnspod=y    # DDNS DNSPod适配
CONFIG_PACKAGE_luci-app-ddnsto=y        # DDNSto远程控制

# 5. 代理/科学上网（匹配“服务-PassWall/SSRP/OpenClash”）
CONFIG_PACKAGE_luci-app-passwall=y      # PassWall
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_ShadowsocksR_Libev_Server=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Shadowsocks_Libev_Server=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_V2ray=y
CONFIG_PACKAGE_luci-app-ssr-plus=y      # ShadowSocksR Plus+
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Shadowsocks_Libev_Server=y
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Kcptun=y
CONFIG_PACKAGE_luci-app-openclash=y     # OpenClash
CONFIG_PACKAGE_luci-app-openclash_INCLUDE_Clash=y
CONFIG_PACKAGE_luci-app-unblockmusic=y  # 解锁网易云音乐
CONFIG_PACKAGE_luci-app-unblockmusic_INCLUDE_UnblockNeteaseMusic_Go=y

# 6. VPN功能（匹配“VPN菜单”）
CONFIG_PACKAGE_luci-app-ipsec-vpnd=y    # IPSec VPN服务器
CONFIG_PACKAGE_luci-app-softethervpn=y  # SoftEther VPN服务器
CONFIG_PACKAGE_luci-app-pptp-server=y   # PPTP VPN服务器
CONFIG_PACKAGE_luci-app-openvpn-server=y # OpenVPN服务器
CONFIG_PACKAGE_luci-app-zerotier=y      # ZeroTier

# 7. 网络增强（匹配“网络菜单”）
CONFIG_PACKAGE_luci-app-firewall=y      # 防火墙
CONFIG_PACKAGE_luci-app-turboacc=y      # Turbo ACC加速
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_OFFLOADING=y
CONFIG_PACKAGE_luci-app-qos=y           # QoS
CONFIG_PACKAGE_luci-app-mwan3=y         # 多线多拨/负载均衡
CONFIG_PACKAGE_luci-app-mwan3helper=y
CONFIG_PACKAGE_luci-app-upnp=y          # uPnP
CONFIG_PACKAGE_luci-app-udpxy=y         # udpxy
CONFIG_PACKAGE_luci-app-iptvhelper=y    # IPTV帮手
CONFIG_PACKAGE_luci-app-wol=y           # 网络唤醒
CONFIG_PACKAGE_luci-app-arpbind=y       # IP/MAC绑定
CONFIG_PACKAGE_luci-app-staticroute=y   # 静态路由
CONFIG_PACKAGE_luci-app-sqm=y           # 网速优化
CONFIG_PACKAGE_luci-app-ddns=y          # 动态DNS

# 8. 工具/辅助功能（匹配“服务-其他”）
CONFIG_PACKAGE_luci-app-frpc=y          # Frp内网穿透
CONFIG_PACKAGE_luci-app-frps=y
CONFIG_PACKAGE_luci-app-pushbot=y       # 微信推送
CONFIG_PACKAGE_luci-app-uugamebooster=y # UU游戏加速器
CONFIG_PACKAGE_luci-app-leoacc=y        # 雷神加速器
CONFIG_PACKAGE_luci-app-igmp-proxy=y    # 组播代理
CONFIG_PACKAGE_luci-app-wrtbwmon=y      # 网速检测/流量统计

# 9. 无线驱动（适配AX1800Pro高通无线）
CONFIG_PACKAGE_kmod-qca-nss-dp=y
CONFIG_PACKAGE_kmod-ath10k=y
CONFIG_PACKAGE_ath10k-firmware-qca9889=y
CONFIG_PACKAGE_ath10k-firmware-qcn9074=y
CONFIG_PACKAGE_kmod-mac80211=y
CONFIG_PACKAGE_wpad-openssl=y
CONFIG_PACKAGE_luci-app-wireless=y      # 无线管理

# 10. 基础依赖（必须）
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_zip=y
